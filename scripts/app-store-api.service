[Unit]
Description=Gunicorn instance to serve App Store API
After=network.target

[Service]
User=goblin
Group=goblin
RuntimeDirectory=gunicorn
WorkingDirectory=/home/goblin/app-store-dash/backend
ExecStart=/home/goblin/venvs/app-store-api-env/bin/gunicorn -k uvicorn.workers.UvicornWorker --workers 1 --bind 127.0.0.1:8000 -m 007 app:app
ExecReload=/bin/kill -s HUP $MAINPID
Restart=on-failure
KillMode=mixed
PrivateTmp=true

[Install]
WantedBy=multi-user.target

